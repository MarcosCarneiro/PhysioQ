<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:gravity="center_vertical|center_horizontal">



    <ScrollView
        android:layout_width="420dp"
        android:layout_height="match_parent"

        android:id="@+id/scrollView3">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paciente"
                    android:id="@+id/textView"
                    android:layout_gravity="left|top"
                    android:textColor="#7eadf6"
                    android:textSize="15sp"
                    android:layout_marginLeft="29dp"
                    android:layout_marginTop="10dp" />

                <ImageView
                    android:layout_width="5sp"
                    android:layout_height="100sp"
                    android:id="@+id/imageView"
                    android:layout_gravity="left|top"
                    android:layout_marginLeft="10dp"
                    android:background="#7fa781"
                    android:adjustViewBounds="false"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome"
                    android:id="@+id/nomeaofas"
                    android:layout_gravity="left|center_vertical"
                    android:textColor="#fbf7f7"
                    android:textSize="39sp"
                    android:layout_marginLeft="29dp"
                    android:layout_marginTop="10dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="20dp"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip">


                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="10sp">

                    <com.liulishuo.magicprogresswidget.MagicProgressCircle
                        android:id="@+id/raofas"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:mpc_stroke_width="18dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_alignParentTop="false"
                        android:layout_alignParentLeft="false"
                        android:layout_alignParentStart="false" />

                    <TextView
                        android:id="@+id/pontosaofas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="70"
                        android:textColor="@color/white"
                        android:textSize="36sp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="pontos"
                        android:textColor="#7eadf6"
                        android:textSize="15sp"
                        android:layout_below="@+id/demo_tv"
                        android:layout_alignRight="@+id/demo_tv"
                        android:layout_alignEnd="@+id/demo_tv"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="35dp" />

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aofas"
                    android:id="@+id/textView5"
                    android:layout_gravity="left|center_vertical"
                    android:textColor="#fbf7f7"
                    android:textSize="21sp"
                    android:layout_marginLeft="200dp"
                    android:layout_marginBottom="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resultado"
                    android:id="@+id/textView4"
                    android:layout_gravity="center_horizontal|top"
                    android:textColor="#7eadf6"
                    android:textSize="21sp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="25dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="355dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="15dp">


            </FrameLayout>


            <FrameLayout
                android:layout_width="437dp"
                android:layout_height="90dp"
                android:layout_marginTop="15dp"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dor"
                    android:layout_gravity="left|top"
                    android:layout_marginTop="21dp"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="29dp" />

                <com.liulishuo.magicprogresswidget.MagicProgressBar
                    android:layout_height="21dp"
                    android:id="@+id/pgdor"
                    app:mpb_background_color="#1AFFFFFF"
                    app:mpb_fill_color="#49f2f2"
                    android:layout_width="250dp"
                    android:layout_gravity="left|bottom"
                    android:layout_marginLeft="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20 pontos"
                    android:textStyle="bold"
                    android:layout_gravity="right|bottom"
                    android:textSize="17sp"
                    android:shadowRadius="2.0"
                    android:textColor="@color/white"
                    android:layout_marginRight="40dp"
                    android:id="@+id/pdor"
                    android:layout_marginLeft="288dp" />


            </FrameLayout>

            <FrameLayout
                android:layout_width="437dp"
                android:layout_height="90dp"
                android:layout_marginTop="15dp"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Funcional"
                    android:id="@+id/textView6"
                    android:layout_gravity="left|top"
                    android:layout_marginTop="21dp"
                    android:textSize="18sp"

                    android:textColor="@color/white"
                    android:layout_marginLeft="29dp"/>

                <com.liulishuo.magicprogresswidget.MagicProgressBar
                    android:layout_height="21dp"
                    android:id="@+id/pgfuncional"
                    app:mpb_background_color="#1AFFFFFF"
                    app:mpb_fill_color="#72bff5"
                    android:layout_width="250dp"
                    android:layout_gravity="left|bottom"
                    android:layout_marginLeft="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20 pontos"
                    android:textStyle="bold"
                    android:layout_gravity="right|bottom"
                    android:textSize="17sp"
                    android:shadowRadius="2.0"
                    android:textColor="@color/white"
                    android:layout_marginRight="40dp"
                    android:id="@+id/pfuncional"
                    android:layout_marginLeft="288dp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="437dp"
                android:layout_height="90dp"
                android:layout_marginTop="15dp"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alinhamento"
                    android:layout_gravity="left|top"
                    android:layout_marginTop="21dp"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="29dp" />

                <com.liulishuo.magicprogresswidget.MagicProgressBar
                    android:layout_height="21dp"
                    android:id="@+id/alinhamento"
                    app:mpb_background_color="#1AFFFFFF"
                    app:mpb_fill_color="#a38cf9"
                    android:layout_width="250dp"
                    android:layout_gravity="left|bottom"
                    android:layout_marginLeft="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 pontos"
                    android:textStyle="bold"
                    android:layout_gravity="right|bottom"
                    android:textSize="17sp"
                    android:shadowRadius="2.0"
                    android:textColor="@color/white"
                    android:layout_marginRight="40dp"
                    android:id="@+id/palinhamento"
                    android:layout_marginLeft="288dp" />


            </FrameLayout>









            <FrameLayout
                android:layout_width="355dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="15dp"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip"
                >


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:background="@drawable/checked" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zero pontos corresponde ao pior estado de saúde e 100 ao melhor estado.Os autores da escala da AOFAS preferiram não relacionar os valores númericos a Excelente, Bom, Regular e Péssimo. "
                    android:layout_gravity="left|top"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:textSize="17sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="355dp"
                android:layout_height="40dp"
                android:layout_marginLeft="29sp"
                android:layout_marginTop="15dp"
                android:background="@color/colorPrimary"
                android:id="@+id/novo"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Começar novo questionário"
                    android:textColor="@color/white"

                    android:layout_gravity="center"
                    android:textSize="20sp"
                    />

            </FrameLayout>

            <FrameLayout
                android:layout_width="355dp"
                android:layout_height="40dp"
                android:layout_marginLeft="29sp"
                android:layout_marginTop="15dp"
                android:id="@+id/apdf"
                android:background="@color/colorPrimary"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salvar como PDF"
                    android:textColor="@color/white"

                    android:layout_gravity="center"
                    android:textSize="20sp"
                    />

            </FrameLayout>

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fonteAofas"
                android:textColor="@color/white"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="29.0dip"
                android:paddingRight="29.0dip"/>



        </LinearLayout>

    </ScrollView>


</LinearLayout>