<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:gravity="center_vertical|center_horizontal">



    <ScrollView
        android:layout_width="420dp"
        android:layout_height="match_parent"

        android:id="@+id/scrollView3">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paciente"
                    android:id="@+id/textView"
                    android:layout_gravity="left|top"
                    android:textColor="#7eadf6"
                    android:textSize="15sp"
                    android:layout_marginLeft="29dp"
                    android:layout_marginTop="10dp" />

                <ImageView
                    android:layout_width="5sp"
                    android:layout_height="100sp"
                    android:id="@+id/imageView"
                    android:layout_gravity="left|top"
                    android:layout_marginLeft="10dp"
                    android:background="#7fa781"
                    android:adjustViewBounds="false"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome"
                    android:id="@+id/nomeow"
                    android:layout_gravity="left|center_vertical"
                    android:textColor="#fbf7f7"
                    android:textSize="39sp"
                    android:layout_marginLeft="29dp"
                    android:layout_marginTop="10dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="20dp">


                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="10sp">

                    <com.liulishuo.magicprogresswidget.MagicProgressCircle
                        android:id="@+id/demo_mpcow"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:mpc_stroke_width="18dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_alignParentTop="false"
                        android:layout_alignParentLeft="false"
                        android:layout_alignParentStart="false" />

                    <TextView
                        android:id="@+id/pontosow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="70"
                        android:textColor="@color/white"
                        android:textSize="36sp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="%"
                        android:textColor="#7eadf6"
                        android:textSize="21sp"
                        android:layout_below="@+id/demo_tv"
                        android:layout_alignRight="@+id/demo_tv"
                        android:layout_alignEnd="@+id/demo_tv"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="40dp"
                        android:layout_marginBottom="20dp" />

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OSWESTRY"
                    android:id="@+id/textView5"
                    android:layout_gravity="left|center_vertical"
                    android:textColor="#fbf7f7"
                    android:textSize="29sp"
                    android:layout_marginLeft="190dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resultado"
                    android:id="@+id/textView4"
                    android:layout_gravity="center_horizontal|top"
                    android:textColor="#7eadf6"
                    android:textSize="29sp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="25dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="355dp"
                android:layout_height="40dp"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="15dp"
                >




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quadro de Pontuação"
                    android:id="@+id/textView6"
                    android:layout_gravity="left|top"
                    android:layout_marginTop="10dp"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    />
            </FrameLayout>


            <FrameLayout
                android:layout_width="355dp"
                android:layout_height="121dp"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="15dp"
                >


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:background="@drawable/checked" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0% a 20% representam incapacidade mínima, onde o tratamento ainda não está indicado, pois os pacientes desse grupo podem realizar a maioria das atividades da vida diárias.  "
                    android:layout_gravity="left|top"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"

                    android:textSize="17sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="355dp"
                android:layout_height="121dp"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="15dp"
                >


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:background="@drawable/checked" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20% a 40% indicam uma incapacidade moderada, onde os pacientes inseridos nesse grupo sentem mais dor e convivem com problemas ao sentar, levantar objetos e ficar em pé. A Locomoção e a vida social ficam mais dificultadas."
                    android:layout_gravity="left|top"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"

                    android:textSize="14sp" />
            </FrameLayout>


            <FrameLayout
                android:layout_width="355dp"
                android:layout_height="121dp"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="15dp"
                >


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:background="@drawable/checked" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="40% a 60% representam uma incapacidade grave onde a dor é o principal problema, e as atividades da vida diária também estão afetadas. Requer uma investigação detalhada."
                    android:layout_gravity="left|top"
                    android:layout_marginLeft="50dp"
                    android:textColor="@color/white"

                    android:layout_marginTop="10dp"
                    android:textSize="17sp" />
            </FrameLayout>


            <FrameLayout
                android:layout_width="355dp"
                android:layout_height="121dp"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="15dp"
                >


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:background="@drawable/checked" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60% a 80% representam um grupo de pacientes já inválidos onde a dor lombar influencia em todos os aspectos da desses pacientes. "
                    android:layout_gravity="left|top"
                    android:layout_marginLeft="50dp"
                    android:textColor="@color/white"

                    android:layout_marginTop="10dp"
                    android:textSize="17sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="355dp"
                android:layout_height="121dp"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="15dp"
                >


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:background="@drawable/checked"
                    android:layout_marginBottom="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="80% a 100% apontam para um paciente preso à cama e aos sintomas exagerados."
                    android:layout_gravity="left|top"
                    android:layout_marginLeft="50dp"
                    android:textColor="@color/white"

                    android:layout_marginTop="10dp"
                    android:textSize="17sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="355dp"
                android:layout_height="40dp"
                android:layout_marginLeft="29sp"
                android:layout_marginTop="15dp"
                android:background="@color/colorPrimary"
                android:id="@+id/novo"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Começar novo questionário"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    />

            </FrameLayout>

            <FrameLayout
                android:layout_width="355dp"
                android:layout_height="40dp"
                android:layout_marginLeft="29sp"
                android:layout_marginTop="15dp"
                android:id="@+id/fpdf"
                android:background="@color/colorPrimary"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gerar PDF"
                    android:textColor="@color/white"

                    android:layout_gravity="center"
                    android:textSize="20sp"
                    />

            </FrameLayout>

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fonteFulkerson"
                android:textColor="@color/white"
                android:layout_marginTop="10dp" />



        </LinearLayout>

    </ScrollView>


</LinearLayout>