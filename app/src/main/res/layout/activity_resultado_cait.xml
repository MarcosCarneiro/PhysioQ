<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:gravity="center_vertical|center_horizontal">



    <ScrollView
        android:layout_width="420dp"
        android:layout_height="match_parent"

        android:id="@+id/scrollView3">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="29dp"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paciente"
                    android:id="@+id/textView"
                    android:layout_gravity="left|top"
                    android:textColor="#7eadf6"
                    android:textSize="15sp"
                    android:layout_marginLeft="29dp"
                    android:layout_marginTop="10dp" />

                <ImageView
                    android:layout_width="5sp"
                    android:layout_height="100sp"
                    android:id="@+id/imageView"
                    android:layout_gravity="left|top"
                    android:layout_marginLeft="10dp"
                    android:background="#7fa781"
                    android:adjustViewBounds="false"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome"
                    android:id="@+id/nomecait"
                    android:layout_gravity="left|center_vertical"
                    android:textColor="#fbf7f7"
                    android:textSize="39sp"
                    android:layout_marginLeft="29dp"
                    android:layout_marginTop="10dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="20dp"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resultado"
                    android:id="@+id/textView4"
                    android:textColor="#7eadf6"
                    android:textSize="21sp"
                    android:layout_marginTop="25dp"
                    android:layout_gravity="center_horizontal|top" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CAIT"
                    android:id="@+id/textView5"
                    android:layout_gravity="center"
                    android:textColor="#fbf7f7"
                    android:layout_marginTop="5dp"
                    android:textSize="21sp"
                    />
            </FrameLayout>

            <FrameLayout
                android:layout_width="355dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="15dp">


            </FrameLayout>


            <FrameLayout
                android:layout_width="437dp"
                android:layout_height="90dp"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tornozelo Direito"
                    android:layout_gravity="left|top"
                    android:layout_marginTop="21dp"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="29dp" />

                <com.liulishuo.magicprogresswidget.MagicProgressBar
                    android:layout_height="21dp"
                    android:id="@+id/ptnzd"
                    app:mpb_background_color="#1AFFFFFF"
                    app:mpb_fill_color="#49f2f2"
                    android:layout_width="271dp"
                    android:layout_gravity="left|bottom"
                    android:layout_marginLeft="40dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20 pontos"
                    android:textStyle="bold"
                    android:layout_gravity="right|bottom"
                    android:textSize="18sp"
                    android:shadowRadius="2.0"
                    android:textColor="@color/white"
                    android:id="@+id/tvtnzd" />


            </FrameLayout>

            <FrameLayout
                android:layout_width="437dp"
                android:layout_height="90dp"
                android:layout_marginTop="15dp"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tornozelo Esquerdo"
                    android:id="@+id/textView6"
                    android:layout_gravity="left|top"
                    android:layout_marginTop="21dp"
                    android:textSize="18sp"

                    android:textColor="@color/white"
                    android:layout_marginLeft="29dp"/>

                <com.liulishuo.magicprogresswidget.MagicProgressBar
                    android:layout_height="21dp"
                    android:id="@+id/ptnze"
                    app:mpb_background_color="#1AFFFFFF"
                    app:mpb_fill_color="#72bff5"
                    android:layout_width="271dp"
                    android:layout_gravity="left|bottom"
                    android:layout_marginLeft="40dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="40 pontos"
                    android:textStyle="bold"
                    android:layout_gravity="right|bottom"
                    android:textSize="18sp"
                    android:shadowRadius="2.0"
                    android:textColor="@color/white"
                    android:id="@+id/tvtnze" />

            </FrameLayout>


            <FrameLayout
                android:layout_width="355dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="15dp"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip"
                >


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:background="@drawable/checked" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zero representa uma instabilidade grave e 30 uma estabilidade normal."
                    android:layout_gravity="left|top"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="355dp"
                android:layout_height="40dp"
                android:layout_marginLeft="29sp"
                android:layout_marginTop="15dp"
                android:background="@color/colorPrimary"
                android:id="@+id/novo"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Começar novo questionário"
                    android:textColor="@color/white"

                    android:layout_gravity="center"
                    android:textSize="20sp"
                    />

            </FrameLayout>

            <FrameLayout
                android:layout_width="355dp"
                android:layout_height="40dp"
                android:layout_marginLeft="29sp"
                android:layout_marginTop="15dp"
                android:id="@+id/apdf"
                android:background="@color/colorPrimary"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salvar como PDF"
                    android:textColor="@color/white"

                    android:layout_gravity="center"
                    android:textSize="20sp"
                    />

            </FrameLayout>

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fonteCait"
                android:textColor="@color/white"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="29.0dip"
                android:paddingRight="29.0dip"/>



        </LinearLayout>

    </ScrollView>


</LinearLayout>