<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:gravity="center_vertical|center_horizontal">



    <ScrollView
        android:layout_width="420dp"
        android:layout_height="match_parent"

        android:id="@+id/scrollView3">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paciente"
                    android:id="@+id/textView"
                    android:layout_gravity="left|top"
                    android:textColor="#7eadf6"
                    android:textSize="15sp"
                    android:layout_marginLeft="29dp"
                    android:layout_marginTop="10dp" />

                <ImageView
                    android:layout_width="5sp"
                    android:layout_height="100sp"
                    android:id="@+id/imageView"
                    android:layout_gravity="left|top"
                    android:layout_marginLeft="10dp"
                    android:background="#7fa781"
                    android:adjustViewBounds="false"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome"
                    android:id="@+id/nomevp"
                    android:layout_gravity="left|center_vertical"
                    android:textColor="#fbf7f7"
                    android:textSize="39sp"
                    android:layout_marginLeft="29dp"
                    android:layout_marginTop="10dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="20dp">


                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="10sp">

                    <com.liulishuo.magicprogresswidget.MagicProgressCircle
                        android:id="@+id/demo_mpc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:mpc_stroke_width="18dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_alignParentTop="false"
                        android:layout_alignParentLeft="false"
                        android:layout_alignParentStart="false" />

                    <TextView
                        android:id="@+id/pontosvp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="70"
                        android:textColor="@color/white"
                        android:textSize="36sp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="pontos"
                        android:textColor="#7eadf6"
                        android:textSize="15sp"
                        android:layout_below="@+id/demo_tv"
                        android:layout_alignRight="@+id/demo_tv"
                        android:layout_alignEnd="@+id/demo_tv"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="40dp" />

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Visa - P"
                    android:id="@+id/textView5"
                    android:layout_gravity="left|center_vertical"
                    android:textColor="#fbf7f7"
                    android:textSize="29sp"
                    android:layout_marginLeft="190dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resultado"
                    android:id="@+id/textView4"
                    android:layout_gravity="center_horizontal|top"
                    android:textColor="#7eadf6"
                    android:textSize="29sp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="25dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="355dp"
                android:layout_height="40dp"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="15dp"
                >




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quadro de Pontuação"
                    android:id="@+id/textView6"
                    android:layout_gravity="left|top"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    />
            </FrameLayout>


            <FrameLayout
                android:layout_width="400dp"
                android:layout_height="190dp"
                android:layout_marginTop="15dp"
                >


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:background="@drawable/checked"
                    android:layout_marginBottom="40dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A pontuação total no VISA-P, que representa
a gravidade da condição do entrevistado em termos numéricos, varia de 0 a 100 pontos, com uma pontuação máxima indicando
a ausência de sintomas e incapacidade."
                    android:layout_gravity="left|top"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"

                    android:textSize="17sp" />
            </FrameLayout>









            <FrameLayout
                android:layout_width="355dp"
                android:layout_height="40dp"
                android:layout_marginLeft="29sp"
                android:layout_marginTop="15dp"
                android:background="@color/colorPrimary"
                android:id="@+id/novo"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Começar novo questionário"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    />

            </FrameLayout>

            <FrameLayout
                android:layout_width="355dp"
                android:layout_height="40dp"
                android:layout_marginLeft="29sp"
                android:layout_marginTop="15dp"
                android:id="@+id/fpdf"
                android:background="@color/colorPrimary"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gerar PDF"
                    android:textColor="@color/white"

                    android:layout_gravity="center"
                    android:textSize="20sp"
                    />

            </FrameLayout>

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fonte_visa_p"
                android:textColor="@color/white"
                android:layout_marginTop="21dp"
                android:layout_marginLeft="25dp"
                />



        </LinearLayout>

    </ScrollView>


</LinearLayout>